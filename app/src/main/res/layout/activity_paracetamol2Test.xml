<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzags"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">



    <SeekBar
        android:id="@+id/seekBarWeight"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewAgeParacetamol"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />
    <SeekBar
        android:id="@+id/seekBarAge"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/editTextCounted"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAgeParacetamol"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:hint="Amount of drugs"
        android:inputType="text|textMultiLine"
        android:text="@string/amount_of_drugs_for_the_kid"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/buttonCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="@string/count_paracetamol"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="    Add New User        "
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/loadUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:text="         Load User        "
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSelectDrug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="          Select Drug         "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/seeDosageDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="Dosage Details"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


    </LinearLayout>


</LinearLayout>

