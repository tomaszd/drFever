<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/zigzags">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add data for new user"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editEnterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="Enter Name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSelectAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Select age in years"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBarAge"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:max="20"
        android:progress="5" />

    <TextView
        android:id="@+id/textSelectWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="Select weight in kg"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBarWeight"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:max="20"
        android:progress="12" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Additional info" />
    <LinearLayout
        android:id="@+id/Layout_second_overs"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"        >

        <Button
            android:id="@+id/buttonSaveUserData"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:background="@drawable/button_bg"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="10dp"
            android:text="Save User Data"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="150dp"
            android:layout_height="77dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/button_bg"
            android:backgroundTint="@android:color/holo_red_light"
            android:padding="10dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
