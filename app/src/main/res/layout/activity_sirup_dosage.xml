<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzags"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <Button
        android:id="@+id/buttonParacetamolDosageAmount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/wst_parac_syr"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="      400 mg"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.25"
        android:fontFamily="cursive"
        android:text="@string/dawka_jednorazowa"
        android:textAlignment="center"
        android:textColor="@color/colorTextBottom"
        android:textSize="23sp"
        android:textStyle="bold|italic" />
    <Space
        android:layout_width="1dp"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonsirup_parac_500_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/sirup_parac_500_5" />

        <Button
            android:id="@+id/buttonsirup_parac_250_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/sirup_parac_250_5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/buttonsirup_parac_200_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/sirup_parac_200_5" />

        <Button
            android:id="@+id/buttonsirup_parac_120_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/sirup_parac_120_5" />

    </LinearLayout>
    <Space
        android:layout_width="1dp"
        android:layout_height="2dp"/>

    <Button
        android:id="@+id/buttonParacetamolDosageSirupAmount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_paracetamol_bez"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="          Wybierz syrop"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="23sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/wyliczona_dawka_ibuprofen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:text="@string/wyliczona_dawka_paracetamol"
        android:textAlignment="center"
        android:textColor="@color/colorTextBottom"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"/>


</LinearLayout>


