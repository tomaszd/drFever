<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzags"
    android:orientation="vertical"
    tools:background="@drawable/zigzags"
    tools:context="com.example.tomaszd.drfever.SelectDrugActivity">

    <TextView
        android:id="@+id/textSelectDrug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="WYBIERZ LEK"
        android:textColor="?attr/colorControlNormal"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="103dp" />


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp">

        <Button
            android:id="@+id/buttonParacetamol"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/paracetamol_transparent"
            android:elevation="0dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <Button
            android:id="@+id/buttonIbuprofen"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/ibuprofen_transparent"/>
    </LinearLayout>


</RelativeLayout>
