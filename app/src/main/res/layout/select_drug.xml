<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzags"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    tools:background="@drawable/zigzags"
    tools:context="com.example.tomaszd.drfever.SelectDrugActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp">
        <Button
            android:id="@+id/buttonParacetamol2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_select_drug"
            android:elevation="0dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        <Button
            android:id="@+id/buttonParacetamol"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:background="@drawable/button_paracetamol"
            android:elevation="0dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <Button
            android:id="@+id/buttonIbuprofen"
            android:layout_height="0dp"
            android:layout_width="match_parent"

            android:layout_weight="1"
            android:background="@drawable/button_ibuprofen"/>
    </LinearLayout>


</RelativeLayout>
