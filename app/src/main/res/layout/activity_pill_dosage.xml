<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzags"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <Button
        android:id="@+id/buttonParacetamolDosageAmount"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@drawable/wst_parac_tabl"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="      400 mg"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />
    <Space
        android:layout_width="1dp"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_pill_parac_1000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/parac_1000" />

        <Button
            android:id="@+id/button_pill_parac_500"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/parac_500" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_pill_parac_300"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/parac_300" />

        <Button
            android:id="@+id/button_pill_parac_250"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/parac_250" />

    </LinearLayout>
    <Space
        android:layout_width="1dp"
        android:layout_height="20dp"/>
    <Button
        android:id="@+id/buttonParacetamolDosagepillAmount"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_paracetamol_bez"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="         Wybierz dawke"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/wyliczona_dawka_ibuprofen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="@string/wyliczona_dawka_paracetamol"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold|italic" />
    <Space
        android:layout_width="1dp"
        android:layout_height="5dp"/>

</LinearLayout>
