<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tomaszd.drfever.AmotaksActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LetsCheck Amotaks"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="103dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <Button
        android:id="@+id/buttonCheckParacetamol"
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="Check Paracetamol "
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="366dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView3"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <Button
        android:id="@+id/buttonParacetamol"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Paracetamol" />

    <Button
        android:id="@+id/buttonAmotaks"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/buttonParacetamol"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/buttonParacetamol"
        android:layout_alignTop="@+id/buttonParacetamol"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Amotaks" />

</RelativeLayout>
