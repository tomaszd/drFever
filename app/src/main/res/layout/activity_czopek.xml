<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzags"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">


    <Button
        android:id="@+id/buttonParacetamolDosageAmount"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_paracetamol_bez"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="      400 mg"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:orientation="vertical">

        <Button
            android:id="@+id/button_CzopekParacetamol"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/czopek_parac"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_Czopek_parac_500"
            android:layout_width="0dp"
            android:layout_height="match_parent"


            android:layout_weight="1"
            android:background="@drawable/parac_500" />

        <Button
            android:id="@+id/button_Czopek_parac_300"
            android:layout_width="0dp"
            android:layout_height="match_parent"


            android:layout_weight="1"
            android:background="@drawable/parac_300" />

        <Button
            android:id="@+id/button_Czopek_parac_250"
            android:layout_width="0dp"
            android:layout_height="match_parent"


            android:layout_weight="1"
            android:background="@drawable/parac_250" />

        <Button
            android:id="@+id/button_Czopek_parac_180"
            android:layout_width="0dp"
            android:layout_height="match_parent"


            android:layout_weight="1"
            android:background="@drawable/parac_180" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_Czopek_parac_150"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:background="@drawable/parac_150" />

        <Button
            android:id="@+id/button_Czopek_parac_125"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:background="@drawable/parac_125" />

        <Button
            android:id="@+id/button_Czopek_parac_80"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:background="@drawable/parac_80" />

        <Button
            android:id="@+id/button_Czopek_parac_50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:background="@drawable/parac_50" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonParacetamolDosageCzopekAmount"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_paracetamol_bez"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="        400 ml"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtParacetamolDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Wybierz najblizszy 100% wymaganej dawki"
        android:textColor="@android:color/black"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"></LinearLayout>


</LinearLayout>


