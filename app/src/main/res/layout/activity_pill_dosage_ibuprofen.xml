<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzags"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <Button
        android:id="@+id/buttonIbuprofenDosageAmount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/wst_ibu_tabl"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="      400 mg"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPillIbuprofen200Forte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/ibuprof_200" />

        <Button
            android:id="@+id/buttonPillIbuprofen400Max"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/ibuprof_400" />

    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/buttonIbuprofenDosagePillAmount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_ibuprofen_bez"
        android:elevation="0dp"
        android:fontFamily="cursive"
        android:text="         Wybierz dawke"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/background_light"
        android:textSize="27sp"
        android:textStyle="bold|italic" />
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/wyliczona_dawka_ibuprofen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:text="@string/wyliczona_dawka_ibuprofen"
        android:textAlignment="center"
        android:textColor="@color/colorTextBottom"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textStyle="bold|italic" />
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>


</LinearLayout>


